<div class="navbar-lewagon d-flex mb-3">
  <div class="me-auto p-2"><i class="fa-solid fa-film"></i></div>
  <div class="p-2"><%= link_to "My lists", lists_path, class: "nav-link" %></div>
  <div class="p-2"><%= link_to "New list", new_list_path, class: "nav-link" %></div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1478720568477-152d9b164e26?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container text-center">
    <h1>Save your <strong>favourite</strong> movies</h1>
  </div>
</div>

<div class="container">

  <div class="d-flex justify-content-between p-5">
    <h2>My lists</h2>
    <%= link_to "New list", new_list_path, class: "btn btn-ghost" %>
  </div>


  <div class="d-flex flex-wrap justify-content-evenly">
    <% @lists.each do |list| %>
      <div class="card-category d-flex justify-content-center align-items-center my-5" style="background-image: url(https://images.unsplash.com/photo-1584636633449-6135be6c4169?q=80&w=2842&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
        <%= link_to list.name, list_path(list), class: "text-decoration-none text-white" %>
      </div>
    <% end %>
  </div>

</div>
