<div class="navbar-lewagon d-flex mb-3">
  <div class="me-auto p-2"><i class="fa-solid fa-film"></i></div>
  <div class="p-2"><%= link_to "My lists", lists_path, class: "nav-link" %></div>
  <div class="p-2"><%= link_to "New list", new_list_path, class: "nav-link" %></div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1601518766968-fd77580e0e9a?q=80&w=2831&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
  </div>
</div>

  <div class="d-flex justify-content-end mt-5 me-5">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-ghost" %>
  </div>

<div class="d-flex flex-wrap justify-content-evenly">
  <% @list.bookmarks.each do |bookmark| %>

  <div class="card-trip my-5">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
    <div class="card-trip-infos">
      <div>
        <h2><%= bookmark.movie.title %></h2>
        <i class="fa-solid fa-star"></i>

        <p><i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %></p>
      </div>
      <h2 class="card-trip-pricing"><%= link_to "delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none text-danger" %></h2>
    </div>
  </div>
  <% end %>
</div>

